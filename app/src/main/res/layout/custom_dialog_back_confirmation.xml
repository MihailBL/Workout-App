<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#8C9386">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit The Exercises?"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/primary"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will stop your workout.
Any progress would be lost, are you sure you want to quit?"
        android:textStyle="italic"
        android:textSize="19sp"
        android:textColor="@color/primary"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_backYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:backgroundTint="#F18D8D"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_BackNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:backgroundTint="#B3AFAF"
            android:layout_marginStart="60dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>